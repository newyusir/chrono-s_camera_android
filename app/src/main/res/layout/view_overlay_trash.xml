<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trashRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/overlay_trash_background"
    android:alpha="0.9"
    android:visibility="gone">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trashIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/overlay_drag_to_close"
        android:tint="@android:color/white"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/trashLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/overlay_drag_to_close"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
</LinearLayout>
